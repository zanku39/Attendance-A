<% provide(:class_text, 'update') %>
<% provide(:button_text, '修正') %>

<div class="modal-dialog modal-lg modal-dialog-center">
  <div class="modal-content">
    <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
      <h1 class="modal-title">拠点情報の修正</h1>
    </div>
    <div class="modal-body">
      <div class="row">
        <div class="col-md-6 col-md-offset-3">
          <%= form_with(model: @office, url: office_path(@office), local: true, method: :patch) do |f| %>
            <%= render 'shared/error_messages', object: @office %>

            <%= f.label :base_number, class: "label-#{yield(:class_text)}" %>
            <%= f.text_field :base_number, class: "form-control" %>

            <%= f.label :base, class: "label-#{yield(:class_text)}" %>
            <%= f.text_field :base, class: "form-control" %>

            <%= f.label :work, class: "label-#{yield(:class_text)}" %>
            <%= f.text_field :work, class: "form-control" %>
            
            <div class="center">
              <%= f.submit yield(:button_text), class: "btn btn-primary btn-#{yield(:class_text)}" %>
              <button type="button" class="btn btn-default btn-<%= yield(:class_text) %>" data-dismiss="modal">
                キャンセル
              </button>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>